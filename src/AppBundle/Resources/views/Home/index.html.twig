{% extends 'AppBundle:base.html.twig' %}
{% block title %}Search offices{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h3 class="text-center">show offices in the neighborhood of:</h3>
        <div class="row">
            <form id="searchForm" class="form-horizontal">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <input placeholder="Gent, BelgiÃ«" id="searchTextField" type="text" class="form-control">
                    </div>
                </div>


                <div class="col-sm-8 col-sm-offset-2">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="checkbox">
                                <label>
                                    <input class="office-condition" id="is_open_in_weekends" type="checkbox">Open in weekends
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="checkbox">
                                <label>
                                    <input class="office-condition" id="has_support_desk" type="checkbox"> With support office
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="row results">
            <div hidden id="loading" class="row text-center">
                <img src="{{ asset('img/ajax-loader.gif') }}" alt="">
            </div>
            <ul></ul>
        </div>
    </div>
{% endblock %}